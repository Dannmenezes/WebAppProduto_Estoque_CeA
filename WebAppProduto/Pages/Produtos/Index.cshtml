@page
@model WebAppProduto.Pages.Produtos.IndexModel
@{
}
<div class="container">
    <div>
        <h1 class="text-md-left">
            Estoque
        </h1>
        <div class="col-lg-12" style="text-align: right; padding-bottom: 1.5rem;">
            <a class="btn btn-outline-success"
               asp-area="" asp-page="/Produtos/Create">Adicionar Produto</a>
        </div>
        
    </div>
    <section class="d-flex">

        <div class="card shadow col-lg-12">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Produtos</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>Tipo</th>
                                <th>Setor</th>
                                <th>Fornecedor</th>
                                <th>Local</th>
                                <th>Quantidade</th>
                                <th></th>
                                <th></th>
                            </tr>
                            @foreach (var data in Model.Produtos)
                            {
                        <tfoot>
                        <td>@Html.DisplayFor(modelItem => data.ID)</td>
                        <td>@Html.DisplayFor(modelItem => data.nome)</td>
                        <td>@Html.DisplayFor(modelItem => data.tipo)</td>
                        <td>@Html.DisplayFor(modelItem => data.setor)</td>
                        <td>@Html.DisplayFor(modelItem => data.fornecedor)</td>
                        <td>@Html.DisplayFor(modelItem => data.local)</td>
                        <td>@Html.DisplayFor(modelItem => data.quantidade)</td>
                        <td alig-right>
                            <a class="btn btn-info"
                               asp-page="/Produtos/Detail"
                               asp-route-id="@data.ID">Detalhes</a>
                        </td>
                        <td alig-right>
                            <a class="btn btn-danger"
                               asp-page="/Produtos/Detail"
                               asp-route-id="@data.ID">Excluir</a>
                        </td>
                        </tfoot>
                            }
                        </thead>
                            
                    </table>

                    
                </div>



            </div>
        </div>
</div>
        </section>
    </div>

